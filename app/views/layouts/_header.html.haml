%header.header
  .header-inner
    %h1.header-inner--left
      %span MEMO APP
    .header-inner--search
      %input#memo-search-field.input-form{placeholder: "メモ検索", type: "text"}
      #memo-search-result
    .header-inner--right
      -if user_signed_in?
        =link_to destroy_user_session_path, {method: :delete, class: 'logout-btn'} do
          ログアウト
      -else
        =link_to new_user_session_path, {class: 'sign-in-btn'} do
          ログイン
        =link_to new_user_registration_path, {class: 'sign-up-btn'} do
          新規登録
